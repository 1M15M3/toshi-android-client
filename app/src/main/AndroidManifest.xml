<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bakkenbaeck.token">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:hardwareAccelerated="true"
        android:name="com.bakkenbaeck.token.view.BaseApplication"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.bakkenbaeck.token.view.activity.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.bakkenbaeck.token.view.activity.MainActivity" />
        <activity android:name="com.bakkenbaeck.token.view.activity.ChatActivity" />
        <activity android:name="com.bakkenbaeck.token.view.activity.ViewUserActivity" />
        <activity android:name="com.bakkenbaeck.token.view.activity.ProfileActivity" />
        <activity android:name="com.bakkenbaeck.token.view.activity.UserSearchActivity" />
        <activity android:name="com.bakkenbaeck.token.view.activity.AmountActivity" />
        <activity android:name="com.bakkenbaeck.token.view.activity.ScannerActivity" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="d6f421ea196993dc3048f7ba96ef27a75a55b2a2" />

        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="gcm.play.android.samples.com.gcmquickstart" />
            </intent-filter>
        </receiver>

        <service
            android:name=".service.GcmMessageReceiver"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>

        <service
            android:name=".service.InstanceIdService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID"/>
            </intent-filter>
        </service>

        <service
            android:name=".service.RegistrationIntentService"
            android:exported="false">
        </service>

    </application>

</manifest>