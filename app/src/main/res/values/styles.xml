<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#4E525D</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/mainText</item>
        <item name="android:colorBackground">@color/generalBg</item>
        <item name="android:windowBackground">@color/generalBg</item>
        <item name="android:textColorHint">@color/mainTextHint</item>
        <item name="editTextStyle">@style/AppEditTextStyle</item>
        <item name="android:editTextStyle">@style/AppEditTextStyle</item>
        <item name="android:autoCompleteTextViewStyle">@style/AppAutoCompleteTextStyle</item>
        <item name="android:buttonStyle">@style/Button</item>
        <item name="buttonStyle">@style/Button</item>
        <item name="android:dialogTheme">@style/DialogTheme</item>
        <item name="android:actionMenuTextAppearance">@style/LowerCaseMenuTextAppearance</item>
    </style>

    <style name="FullscreenAppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:actionBarStyle">@style/TranslucentActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="TranslucentActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppEditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/mainText</item>
    </style>

    <style name="AppAutoCompleteTextStyle" parent="@android:style/Widget.AutoCompleteTextView">
        <item name="android:textColor">@color/mainText</item>
    </style>

    <style name="Button" parent="android:Widget.Holo.Button">
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:background">@drawable/background_message_remote</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FlatButton" parent="Button">
        <item name="android:textColor">@color/mainTextHint</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="GreenButton" parent="Button">
        <item name="android:textColor">@color/bubbleTextLocal</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="actionMenuTextColor">@color/colorAccent</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
        <item name="android:titleTextStyle">@style/Toolbar.TitleText</item>
        <item name="colorControlNormal">@color/textColorPrimary</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ScannerTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:homeAsUpIndicator">@drawable/ic_close</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:actionBarStyle">@style/TranslucentActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:background">@drawable/round_corner_dialog</item>
        <item name="android:textColor">@color/mainText</item>
        <item name="android:textColorHint">@color/mainTextHint</item>
        <item name="colorPrimary">@color/divider</item>
        <item name="colorPrimaryDark">@color/divider</item>
        <item name="colorAccent">@color/divider</item>
    </style>

    <style name="LowerCaseMenuTextAppearance" parent="android:TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
