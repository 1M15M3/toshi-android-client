<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RatingBar">
        <attr name="backgroundColor" format="color" />
        <attr name="foregroundColor" format="color" />
        <attr name="progressPercentage" format="integer" />
        <attr name="radius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ShadowTextView">
        <attr name="shadow" format="boolean" />
        <attr name="text" format="string" />
        <attr name="cornerRadius" format="dimension" />
    </declare-styleable>
    
    <declare-styleable name="StarRating">
        <attr name="bigMode" format="boolean"/>
    </declare-styleable>
</resources>