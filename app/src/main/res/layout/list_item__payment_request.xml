<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.GridLayout
        android:id="@+id/remote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:columnCount="2"
        android:background="@drawable/remote_request_background"
        android:layout_marginBottom="@dimen/bubbleMargin"
        android:layout_marginTop="@dimen/bubbleMargin"
        android:minWidth="50dp">

        <TextView
            android:id="@+id/remote_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:lineSpacingExtra="2dp"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/defaultTextSize"
            android:text="@string/money_request"
            app:layout_columnSpan="2"/>

        <TextView
            android:id="@+id/remote_requested_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:lineSpacingExtra="2dp"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/defaultTextSize"
            tools:text="$20.00 USD"/>

        <TextView
            android:id="@+id/remote_eth_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:lineSpacingExtra="2dp"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/defaultTextSize"
            tools:text=" · 0.4534 ETH"/>

        <View
              android:layout_width="0dp"
              android:layout_height="1dp"
              android:background="@color/textColorHint"
              app:layout_columnWeight="1"
              app:layout_gravity="fill_horizontal"
              app:layout_columnSpan="2"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            android:orientation="horizontal"
            app:layout_gravity="fill_horizontal"
            app:layout_columnSpan="2">

            <Button
                android:id="@+id/reject_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_reject"
                style="@style/InChatButton"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/textColorHint"/>

            <Button
                android:id="@+id/approve_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_approve"
                style="@style/InChatButton"/>
        </LinearLayout>


    </android.support.v7.widget.GridLayout>

    <android.support.v7.widget.GridLayout
        android:id="@+id/local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:columnCount="2"
        android:layout_gravity="right"
        android:background="@drawable/btn_with_radius"
        android:layout_marginBottom="@dimen/bubbleMargin"
        android:layout_marginTop="@dimen/bubbleMargin"
        android:minWidth="50dp">

        <TextView
            android:id="@+id/local_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:lineSpacingExtra="2dp"
            android:textColor="@color/textColorContrast"
            android:textSize="@dimen/defaultTextSize"
            android:text="@string/request_sent"
            app:layout_columnSpan="2"/>

        <TextView
            android:id="@+id/local_requested_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:lineSpacingExtra="2dp"
            android:textColor="@color/textColorContrast"
            android:textSize="@dimen/defaultTextSize"
            tools:text="$20.00 USD"/>

        <TextView
            android:id="@+id/local_eth_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:lineSpacingExtra="2dp"
            android:textColor="@color/textColorTertiary"
            android:textSize="@dimen/defaultTextSize"
            tools:text=" · 0.4534 ETH"/>
    </android.support.v7.widget.GridLayout>

</FrameLayout>

