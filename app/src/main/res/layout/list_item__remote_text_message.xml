<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/single_message_item__message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_message_remote"
        android:layout_marginBottom="@dimen/bubbleMargin"
        android:layout_marginTop="@dimen/bubbleMargin"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:gravity="center"
        android:lineSpacingExtra="2dp"
        android:layout_gravity="left"
        android:minWidth="50dp"
        android:textColor="@color/textColorContrast"
        android:textSize="@dimen/defaultTextSize"
        tools:text="This is a remote message!"/>

</FrameLayout>