<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/margin_primary"
    android:paddingRight="@dimen/margin_primary"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:background="?selectableItemBackground">

    <ImageView
        android:id="@+id/image"
        android:layout_width="72dp"
        android:layout_height="72dp" />

    <android.support.v4.widget.Space
        android:layout_width="12dp"
        android:layout_height="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_subtitle"
            android:textColor="@color/textColorPrimary"
            style="@style/MediumEllipsizeEndStyle"
            tools:text="World of Ether"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textSize="@dimen/text_size_description"
            android:textColor="@color/textColorSecondary"
            style="@style/NormalEllipsizeEndStyle"
            tools:text="Store, sell and breed your valuable Etherians on the Ethereum blockchain Store, sell and breed your valuable Etherians on the Ethereum blockchain"/>

    </LinearLayout>
</LinearLayout>