<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="3dp"
            android:textSize="16sp"
            android:hint="@string/enter_passphrase" />

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexWrap="wrap">

            <com.toshi.view.custom.SuggestionInputView
                android:id="@+id/zero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SuggestionViewStyle" />

            <com.toshi.view.custom.SuggestionInputView
                android:id="@+id/one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SuggestionViewStyle"
                android:visibility="gone" />

            <com.toshi.view.custom.SuggestionInputView
                android:id="@+id/two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SuggestionViewStyle"
                android:visibility="gone" />

            <com.toshi.view.custom.SuggestionInputView
                android:id="@+id/three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SuggestionViewStyle"
                android:visibility="gone" />

            <com.toshi.view.custom.SuggestionInputView
                android:id="@+id/four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SuggestionViewStyle"
                android:visibility="gone" />

            <com.toshi.view.custom.SuggestionInputView
                android:id="@+id/five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SuggestionViewStyle"
                android:visibility="gone" />

            <com.toshi.view.custom.SuggestionInputView
                android:id="@+id/six"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SuggestionViewStyle"
                android:visibility="gone" />

            <com.toshi.view.custom.SuggestionInputView
                android:id="@+id/seven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SuggestionViewStyle"
                android:visibility="gone" />

            <com.toshi.view.custom.SuggestionInputView
                android:id="@+id/eight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SuggestionViewStyle"
                android:visibility="gone" />

            <com.toshi.view.custom.SuggestionInputView
                android:id="@+id/nine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SuggestionViewStyle"
                android:visibility="gone" />

            <com.toshi.view.custom.SuggestionInputView
                android:id="@+id/ten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SuggestionViewStyle"
                android:visibility="gone" />

            <com.toshi.view.custom.SuggestionInputView
                android:id="@+id/eleven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SuggestionViewStyle"
                android:visibility="gone" />

        </com.google.android.flexbox.FlexboxLayout>

    </FrameLayout>

    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_height="5dp" />

    <View
        android:id="@+id/underline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_wrapBefore="true"
        android:background="@color/input_underline"
        android:clickable="false"/>

    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_height="10dp" />

    <FrameLayout
        android:id="@+id/messageWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/errorView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/error_color"
            tools:text="Error message"/>

        <TextView
            android:id="@+id/hidePassphrase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="5dp"
            android:textSize="14sp"
            android:textColor="@color/textColorSecondary"
            android:text="@string/hide_passphrase"/>

    </FrameLayout>
</LinearLayout>