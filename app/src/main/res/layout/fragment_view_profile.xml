<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="16dp"/>

        <ImageView
            android:id="@+id/qrCodeImage"
            android:layout_width="166dp"
            android:layout_height="166dp"
            android:layout_gravity="center_horizontal"/>

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="16dp"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/textColorPrimary"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:text="Damn Daniel!"/>

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="\@username"
            android:textColor="@color/textColorSecondary"/>

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="32dp"/>

        <Button
            android:id="@+id/edit_profile_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:text="@string/edit_profile"/>

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="32dp"/>

        <include layout="@layout/horizontal_divider"/>

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/textColorSecondary"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="@string/reputation"/>

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="8dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/activity_horizontal_margin">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="49sp"
                    android:textColor="@color/ratingPrimary"
                    android:text="3.6"/>

                <com.bakkenbaeck.token.view.custom.StarRatingView
                    android:id="@+id/rating_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/textColorSecondary"
                    android:text="500 ratings"/>

            </LinearLayout>

        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="20dp"/>

        <include layout="@layout/horizontal_divider"/>

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="@string/profile_about"
            android:textColor="@color/textColorSecondary"/>

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="8dp"/>

        <TextView
            android:id="@+id/about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            tools:text="Digital dingus @bakkenbaeck"
            android:textColor="@color/textColorPrimary"/>

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="20dp"/>

        <include layout="@layout/horizontal_divider"/>

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="@string/profile_location"
            android:textColor="@color/textColorSecondary"/>

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="8dp"/>

        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            tools:text="Amsterdam, The Netherlands"
            android:textColor="@color/textColorPrimary"/>

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="20dp"/>

    </LinearLayout>
</ScrollView>
</layout>