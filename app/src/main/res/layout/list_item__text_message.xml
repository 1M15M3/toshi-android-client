<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/remote_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_marginBottom="@dimen/bubbleMargin"
        android:layout_marginTop="@dimen/bubbleMargin"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="@drawable/background_message_remote"
        android:autoLink="web"
        android:lineSpacingExtra="2dp"
        android:textColor="@color/textColorContrast"
        android:textColorLink="@color/textColorContrast"
        android:textSize="@dimen/defaultTextSize"
        tools:text="This is a remote message!"
        android:visibility="gone"
        tools:visibility="visible"/>

    <com.tokenbrowser.view.custom.RoundCornersImageView
        android:id="@+id/remote_image"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_marginTop="@dimen/bubbleMargin"
        android:layout_marginBottom="@dimen/bubbleMargin"
        android:visibility="gone" />

    <com.tokenbrowser.view.custom.RoundCornersImageView
        android:id="@+id/local_image"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/bubbleMargin"
        android:layout_marginBottom="@dimen/bubbleMargin"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/local_container"
        android:layout_gravity="right"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/local_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/bubbleMargin"
            android:layout_marginTop="@dimen/bubbleMargin"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:gravity="left"
            android:background="@drawable/background__local_message"
            android:autoLink="web"
            android:lineSpacingExtra="2dp"
            android:textColor="@color/textColorPrimary"
            android:textColorLink="@color/textColorContrast"
            android:textSize="@dimen/defaultTextSize"
            tools:text="This is a locally sent message!"/>

        <TextView
            android:id="@+id/sent_status_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorSecondary"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            tools:visibility="visible"
            android:text="@string/error__message_failed"/>
    </LinearLayout>

</FrameLayout>