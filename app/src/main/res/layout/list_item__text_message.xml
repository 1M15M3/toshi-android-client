<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/remote_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_message_remote"
        android:layout_marginBottom="@dimen/bubbleMargin"
        android:layout_marginTop="@dimen/bubbleMargin"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:gravity="left"
        android:lineSpacingExtra="2dp"
        android:layout_gravity="left"
        android:textColor="@color/textColorContrast"
        android:textSize="@dimen/defaultTextSize"
        tools:text="This is a remote message!"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/local_container"
        android:layout_gravity="right"
        >

        <TextView
            android:id="@+id/local_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_with_radius"
            android:layout_marginBottom="@dimen/bubbleMargin"
            android:layout_marginTop="@dimen/bubbleMargin"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:gravity="left"
            android:lineSpacingExtra="2dp"
            android:textColor="@color/textColorContrast"
            android:textSize="@dimen/defaultTextSize"
            android:layout_gravity="right"
            tools:text="This is a locally sent message!"/>

        <TextView
            android:id="@+id/sent_status_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorSecondary"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            tools:visibility="visible"
            android:text="@string/error__message_failed"/>
    </LinearLayout>



</FrameLayout>