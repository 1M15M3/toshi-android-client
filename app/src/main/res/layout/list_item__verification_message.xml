<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/bubbleMargin"
    android:layout_marginBottom="@dimen/bubbleMargin">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:src="@drawable/toshi_avatar"
        android:layout_marginRight="@dimen/avatarPadding" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="50dp"
        android:orientation="vertical"
        android:padding="@dimen/textBubblePadding"
        android:background="@drawable/background_message_remote">

        <TextView
            android:id="@+id/verification_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/bubbleMargin"
            android:gravity="center_vertical"
            android:textSize="13sp"
            android:textColor="@color/textColorSec"
            tools:text="Now, your balance doesn’t show up in the bar in the top here yet. That’s because we can’t give it to you until you verify your phone number—we’re storing it for you until then.

Verifying your phone number will also activate and increase your reputation score. So, what are you waiting for?" />

        <TextView
            android:id="@+id/verifyBtn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/btn_with_radius"
            android:layout_marginTop="@dimen/textBubblePadding"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/buttonTextColor"
            android:textSize="12sp"
            android:text="Verify phone number"
            android:visibility="gone"/>
        
    </LinearLayout>
</LinearLayout>