<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:gravity="center_vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/avatar_size_small"
        android:layout_height="@dimen/avatar_size_small"
        android:src="@mipmap/launcher"/>

    <android.support.v4.widget.Space
        android:layout_width="12dp"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/name"
            android:textColor="@color/textColorPrimary"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Damn Daniel!"/>

        <TextView
            android:id="@+id/username"
            android:textColor="@color/textColorSecondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\@username"/>
    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <com.bakkenbaeck.token.view.custom.RoundedProgressBar
            android:id="@+id/level_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundColor="@color/levelSecondary"
            app:foregroundColor="@color/levelPrimary"
            app:progressPercentage="60"/>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="8dp"/>

        <TextView
            android:id="@+id/level"
            android:textColor="@color/levelPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Level 5"/>
    </LinearLayout>

</LinearLayout>