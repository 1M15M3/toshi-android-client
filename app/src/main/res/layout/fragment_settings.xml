<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/windowBackgroundContrast">


    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/windowBackground"
        app:columnCount="6" >

        <!-- Row 1 -->
        <android.support.v4.widget.Space
            android:layout_width="@dimen/activity_horizontal_margin"
            android:layout_height="wrap_content"
            app:layout_rowSpan="6"/>

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="20dp"
            app:layout_columnSpan="4"/>

        <android.support.v4.widget.Space
            android:layout_width="@dimen/activity_horizontal_margin"
            android:layout_height="wrap_content"
            app:layout_rowSpan="6"/>

        <!-- Row 2 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/my_profile"
            android:textColor="@color/textColorSecondary"
            app:layout_columnSpan="4"/>

        <!-- Row 3 -->
        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="20dp"
            app:layout_columnSpan="4"/>


        <!-- Row 4 -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@mipmap/launcher"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            app:layout_rowSpan="2"/>

        <TextView
            android:id="@+id/name"
            android:textColor="@color/textColorPrimary"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Damn Daniel!"/>

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"/>


        <com.bakkenbaeck.token.view.custom.RoundedProgressBar
            android:id="@+id/level_progress"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            app:backgroundColor="@color/levelSecondary"
            app:foregroundColor="@color/levelPrimary"
            app:progressPercentage="60"/>

        <!-- Row 5 -->
        <TextView
            android:id="@+id/username"
            android:textColor="@color/textColorSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\@username"/>

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"/>

        <TextView
            android:id="@+id/level"
            android:textColor="@color/levelPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_gravity="center_horizontal"
            android:text="Level 5"/>

        <!-- Row 6 -->
        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="20dp"
            app:layout_columnSpan="4"/>

    </android.support.v7.widget.GridLayout>

    <android.support.v4.widget.Space
        android:layout_width="wrap_content"
        android:layout_height="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/windowBackground"
        android:padding="@dimen/activity_horizontal_margin"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorSecondary"
            android:text="@string/settings"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorPrimary"
            android:padding="40dp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="ðŸŒµ Coming soon"/>

    </LinearLayout>

</LinearLayout>
</layout>