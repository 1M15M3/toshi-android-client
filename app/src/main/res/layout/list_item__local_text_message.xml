        android:padding="@dimen/textBubblePadding"
        android:background="@drawable/background_message_local"
        android:textColor="@color/bubbleTextLocal"
        android:minWidth="50dp"
        android:gravity="center_horizontal"
        android:layout_gravity="right" />
</FrameLayout>

