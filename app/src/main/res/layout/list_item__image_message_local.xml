<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/container"
    android:layout_gravity="right" >

    <com.tokenbrowser.view.custom.RoundCornersImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/bubbleMargin"
        android:layout_marginBottom="@dimen/bubbleMargin" />

    <TextView
        android:id="@+id/sent_status_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:textColor="@color/textColorSecondary"
        android:visibility="gone"
        tools:visibility="visible"
        android:text="@string/error__message_failed"/>
</LinearLayout>