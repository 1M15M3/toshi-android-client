<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.GridLayout
        android:id="@+id/remote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:columnCount="2"
        android:background="@drawable/remote_request_background"
        android:layout_marginBottom="@dimen/bubbleMargin"
        android:layout_marginTop="@dimen/bubbleMargin"
        android:minWidth="50dp">

        <TextView
            android:id="@+id/remote_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:lineSpacingExtra="2dp"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/defaultTextSize"
            android:text="@string/money_received"
            app:layout_columnSpan="2"/>

        <TextView
            android:id="@+id/remote_requested_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:lineSpacingExtra="2dp"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/defaultTextSize"
            tools:text="$20.00 USD"/>

        <TextView
            android:id="@+id/remote_eth_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:lineSpacingExtra="2dp"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/defaultTextSize"
            tools:text=" · 0.4534 ETH"/>

    </android.support.v7.widget.GridLayout>


    <LinearLayout
        android:id="@+id/local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="right">

        <android.support.v7.widget.GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:columnCount="2"

            android:background="@drawable/btn_with_radius"
            android:layout_marginBottom="@dimen/bubbleMargin"
            android:layout_marginTop="@dimen/bubbleMargin"
            android:minWidth="50dp">

            <TextView
                android:id="@+id/local_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:lineSpacingExtra="2dp"
                android:textColor="@color/textColorContrast"
                android:textSize="@dimen/defaultTextSize"
                android:text="@string/money_sent"
                app:layout_columnSpan="2"/>

            <TextView
                android:id="@+id/local_requested_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:lineSpacingExtra="2dp"
                android:textColor="@color/textColorContrast"
                android:textSize="@dimen/defaultTextSize"
                tools:text="$20.00 USD"/>

            <TextView
                android:id="@+id/local_eth_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:lineSpacingExtra="2dp"
                android:textColor="@color/textColorTertiary"
                android:textSize="@dimen/defaultTextSize"
                tools:text=" · 0.4534 ETH"/>
        </android.support.v7.widget.GridLayout>

        <TextView
            android:id="@+id/sent_fail_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorSecondary"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            tools:visibility="visible"
            android:text="@string/error__transaction_failed"/>

    </LinearLayout>


</FrameLayout>

